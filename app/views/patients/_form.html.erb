<%= form_with(model: patient, local: true, html: { class: 'form' }) do |form| %>
  <% if patient.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
        <% patient.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <p class="mt-4">Nombre(s)</p>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <p class="mt-4">Apellido(s)</p>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <p class="mt-4">Fecha de Nacimiento</p>
    <%= form.date_field :birthday, class: 'form-control' %>
  </div>

  <div class="form-group">
    <p class="mt-4">Email</p>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Guardar', class: 'mt-4 btn btn-primary' %>
  </div>
<% end %>
