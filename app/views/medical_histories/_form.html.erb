<%= form_with(model: medical_history) do |form| %>
  <% if medical_history.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(medical_history.errors.count, "error") %> prohibited this medical history from being saved:</h2>
      <ul>
        <% medical_history.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <p class="mt-3">Diagn√≥stico</p>
    <%= form.text_field :diagnosis, class: 'form-control' %>
  </div>

  <div class="form-group">
    <p class="mt-3">Fecha de consulta</p>
    <%= form.date_field :consultation_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <p class="mt-3">Notas</p>
    <%= form.text_area :notes, class: 'form-control' %>
  </div>

  <div class="form-group">
    <p class="mt-3">Paciente</p>
    <%= form.collection_select :patient_id, Patient.all, :id, lambda { |patient| "#{patient.first_name} #{patient.last_name}" },  { prompt: "Selecciona un paciente" }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Guardar', class: 'my-4 btn btn-success' %>
  </div>
<% end %>
